@model System.Collections.Generic.IReadOnlyList<PROG6212_POE.Models.ClaimDto>
@{
    ViewData["Title"] = "Pending Claims";
}
<div class="card">
    <div class="card-header bg-white fw-semibold">Pending Claims</div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="p-4 text-muted">No pending claims.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-sm align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Lecturer</th>
                            <th>Date</th>
                            <th>Hours</th>
                            <th>Activity</th>
                            <th>Total (R)</th>
                            <th>Docs</th>
                            <th>Status</th>
                            <th style="width:300px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.LecturerName</td>
                                <td>@c.DateWorked.ToString("yyyy-MM-dd")</td>
                                <td>@c.HoursWorked</td>
                                <td>@c.Activity</td>
                                <td>@c.TotalAmount.ToString("N2")</td>
                                <td>
                                    @if (c.Documents.Any())
                                    {
                                        foreach (var d in c.Documents)
                                        {
                                            <a href="@d.RelativePath" target="_blank">@d.FileName</a>
                                            <br />
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">None</span>
                                    }
                                </td>
                                <td><span class="badge @(c.Status == PROG6212_POE.Models.ClaimStatus.UnderReview ? "bg-info" : (c.Status == PROG6212_POE.Models.ClaimStatus.Submitted ? "bg-secondary" : "bg-success"))">@c.Status</span></td>
                                <td>
                                    <form asp-action="StartReview" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@c.ClaimId" />
                                        <button class="btn btn-outline-info btn-sm" @(c.Status != PROG6212_POE.Models.ClaimStatus.Submitted ? "disabled" : "")>Start Review</button>
                                    </form>
                                    <button class="btn btn-success btn-sm ms-1" data-bs-toggle="modal" data-bs-target="#approveModal" data-id="@c.ClaimId">Approve</button>
                                    <button class="btn btn-danger btn-sm ms-1" data-bs-toggle="modal" data-bs-target="#rejectModal" data-id="@c.ClaimId">Reject</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Approve modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Approve" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Approve Claim</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="approveId" />
                    <label class="form-label">Comment (optional)</label>
                    <textarea name="comment" class="form-control" rows="3" placeholder="Approval note..."></textarea>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success">Approve</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Reject" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Reject Claim</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="rejectId" />
                    <label class="form-label">Reason</label>
                    <textarea name="comment" class="form-control" rows="3" placeholder="Explain why..."></textarea>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">Reject</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const approveModal = document.getElementById('approveModal');
        approveModal.addEventListener('show.bs.modal', e => {
          document.getElementById('approveId').value = e.relatedTarget.getAttribute('data-id');
        });
        const rejectModal = document.getElementById('rejectModal');
        rejectModal.addEventListener('show.bs.modal', e => {
          document.getElementById('rejectId').value = e.relatedTarget.getAttribute('data-id');
        });
    </script>
}