@{
    ViewData["Title"] = "Welcome to CMCS";
}

<section class="hero text-center">
    <div class="container">
        <h1 class="display-5 fw-bold mb-3">Welcome to the Contract Monthly Claim System</h1>
        <p class="lead mb-4">
            Submit, manage, and approve Independent Contractor claims securely and efficiently — built with ASP.NET Core MVC.
        </p>

        <div class="d-flex flex-wrap justify-content-center gap-3 mb-5">
            <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-hero">
                <i class="bi bi-box-arrow-in-right me-2"></i>Login
            </a>
            <a asp-controller="Home" asp-action="About" class="btn btn-ghost btn-hero">
                <i class="bi bi-info-circle me-2"></i>Learn more
            </a>
        </div>

        <!-- quick confidence strip -->
        <div class="d-flex flex-wrap justify-content-center gap-2">
            <div class="stat-pill"><i class="bi bi-shield-check me-2"></i>Role-based access</div>
            <div class="stat-pill"><i class="bi bi-cloud-arrow-up me-2"></i>Document uploads</div>
            <div class="stat-pill"><i class="bi bi-activity me-2"></i>Live status tracking</div>
        </div>
    </div>
</section>

<div class="container py-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card feature-card h-100">
                <div class="card-body">
                    <div class="feature-icon mb-3"><i class="bi bi-journal-check"></i></div>
                    <h5 class="fw-semibold">Lecturers</h5>
                    <p class="text-muted mb-0">
                        Capture working hours, upload supporting documents, and track claim status in real-time.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card feature-card h-100">
                <div class="card-body">
                    <div class="feature-icon success mb-3"><i class="bi bi-clipboard-check"></i></div>
                    <h5 class="fw-semibold">Programme Coordinators</h5>
                    <p class="text-muted mb-0">
                        Review, comment, and verify lecturer claims in one organized dashboard.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card feature-card h-100">
                <div class="card-body">
                    <div class="feature-icon warning mb-3"><i class="bi bi-bar-chart-line"></i></div>
                    <h5 class="fw-semibold">Academic Managers</h5>
                    <p class="text-muted mb-0">
                        Oversee claim activity, ensure compliance, and keep processes on track.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
