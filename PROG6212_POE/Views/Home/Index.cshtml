@{
    ViewData["Title"] = "Welcome to CMCS";
}

<div class="hero text-center">
    <h1 class="fw-bold mb-3">Welcome to the Contract Monthly Claim System</h1>
    <p class="lead mb-4">
        Submit, manage, and approve Independent Contractor claims securely and efficiently.
    </p>

    <div class="d-flex justify-content-center gap-3 mb-5">
        <a asp-controller="Auth" asp-action="Login" class="btn btn-light btn-lg px-4 shadow-sm">
            <i class="bi bi-box-arrow-in-right"></i> Login
        </a>
        <a asp-controller="Home" asp-action="About" class="btn btn-outline-light btn-lg px-4">
            Learn More
        </a>
    </div>
</div>

<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="fw-semibold">Lecturers</h5>
                    <p class="text-muted">
                        Capture your working hours, upload supporting documents, and track your claim status in real-time.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="fw-semibold">Programme Coordinators</h5>
                    <p class="text-muted">
                        Review, comment on, and approve lecturer claims in one centralized dashboard.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="fw-semibold">Academic Managers</h5>
                    <p class="text-muted">
                        Oversee claim activity, ensure compliance, and keep track of claim progress securely.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>