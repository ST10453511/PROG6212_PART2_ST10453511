@model PROG6212_POE.Models.SubmitClaimViewModel
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="card surface">
    <div class="card-header clean">Submit Claim</div>
    <div class="card-body">
        <div class="alert alert-light border mb-4">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Tip:</strong> Total is calculated automatically (Hours × Rate). Upload a single supporting document if available.
        </div>

        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data" novalidate>
            @Html.AntiForgeryToken()
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Date Worked</label>
                    <input asp-for="DateWorked" class="form-control" />
                    <span class="text-danger small" asp-validation-for="DateWorked"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Hours Worked</label>
                    <input asp-for="HoursWorked" class="form-control" id="hours" />
                    <span class="text-danger small" asp-validation-for="HoursWorked"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Activity</label>
                    <input asp-for="Activity" class="form-control" placeholder="Lecture / Marking / Consultation" />
                    <span class="text-danger small" asp-validation-for="Activity"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Hourly Rate (R)</label>
                    <input asp-for="HourlyRate" class="form-control" id="rate" />
                    <span class="text-danger small" asp-validation-for="HourlyRate"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Total (auto)</label>
                    <input class="form-control" id="total" value="@Model.TotalAmount.ToString("N2")" readonly />
                    <div class="form-text">Calculated as Hours × Rate</div>
                </div>
                <div class="col-12">
                    <label class="form-label">Supporting Document (optional)</label>
                    <input asp-for="Document" type="file" class="form-control" />
                    <div class="form-text">Allowed: .pdf, .docx, .xlsx · Max 5MB</div>
                </div>
                <div class="col-12">
                    <label class="form-label">Notes (optional)</label>
                    <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                </div>
                <div class="col-12 d-flex gap-2">
                    <button class="btn btn-primary">Submit</button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function recalc(){
          const h = parseFloat(document.getElementById('hours').value.replace(',','.'))||0;
          const r = parseFloat(document.getElementById('rate').value.replace(',','.'))||0;
          document.getElementById('total').value = (h*r).toFixed(2);
        }
        hours.addEventListener('input', recalc);
        rate.addEventListener('input', recalc);
    </script>
}